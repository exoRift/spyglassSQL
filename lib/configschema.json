{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "connections": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "charts": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "pos": {
                  "type": "object",
                  "properties": {
                    "height": {
                      "type": "number"
                    },
                    "width": {
                      "type": "number"
                    },
                    "x": {
                      "type": "number"
                    },
                    "y": {
                      "type": "number"
                    }
                  },
                  "required": [
                    "height",
                    "width",
                    "x",
                    "y"
                  ]
                },
                "table": {
                  "type": "string"
                },
                "title": {
                  "type": "string"
                },
                "type": {
                  "enum": [
                    "bar",
                    "line",
                    "pie"
                  ]
                },
                "xTitle": {
                  "type": "string"
                },
                "yTitle": {
                  "type": "string"
                },
                "joins": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "baseColumn": {
                        "type": "string"
                      },
                      "foreignColumn": {
                        "type": "string"
                      },
                      "table": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "baseColumn",
                      "foreignColumn",
                      "table"
                    ]
                  }
                },
                "map": {
                  "type": "string"
                },
                "where": {
                  "type": "string"
                },
                "xFormatter": {
                  "type": "string"
                },
                "yFormatter": {
                  "type": "string"
                }
              },
              "required": [
                "pos",
                "table",
                "title",
                "type",
                "xTitle",
                "yTitle"
              ]
            }
          },
          "client": {
            "enum": [
              "mysql",
              "oracledb",
              "pg",
              "sqlite3",
              "tedious"
            ]
          },
          "database": {
            "type": "string"
          },
          "environment": {
            "enum": [
              "development",
              "local",
              "production",
              "staging",
              "testing"
            ]
          },
          "host": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "port": {
            "anyOf": [
              {
                "type": "number"
              },
              {
                "type": "string",
                "pattern": "^(?:(?!^-0\\.?0*$)(?:-?(?:(?:0|[1-9]\\d*)(?:\\.\\d+)?)|\\.\\d+?))$"
              },
              {
                "const": ""
              }
            ]
          }
        },
        "required": [
          "charts",
          "client",
          "database",
          "environment",
          "host",
          "name",
          "username"
        ]
      },
      "default": []
    },
    "theme": {
      "enum": [
        "dark",
        "light",
        "system"
      ],
      "default": "system"
    }
  }
}